<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css" />
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
</head>

<script>
    function selectedCourse(element) {
        element.value = element.options[element.selectedIndex].text;
    }
</script>

<body>
    <div class="ui sizer vertical segment">
        <div class="ui huge header">&ensp;COURSE ENROLLMENT</div>
    </div>
    <div class="ui sizer vertical segment">
        <div class="ui medium header">&ensp;Select the course you want to enroll in</div>
    </div>

    <div class="ui one column stackable center aligned page grid">
        <div class="column twelve wide">
            <div class="ui medium header">Choose a course to enroll in</div>
            <div class="field">
                <form action="/enrollment/enroll" method="POST" class="ui form">
                    <label for=" enrollment/enroll ">Course</label>
                    <select class="ui fluid dropdown" id="course_select" onchange="selectedCourse(this)" name="course_id">
                            <!-- <option> Choose a Course </option> -->
                            <% for(var i=0; i < alist.length; i++) { %>
                                <option value="<%= alist[i]['course_id'] %>"><%= alist[i]['course_id'] %></option>
                            <% } %>
                    </select>
                    <div class="ui hidden divider"></div>
                    <button class="ui primary button" type=submit>Enroll!</button>
                </form>
            </div>
            <div class="ui hidden divider"></div>
            <form action="/enrollment/ ">
                <button style="background-color: red; color: white" class="ui button" type=submit>Back to Enrollment Home</button>
            </form>
        </div>
    </div>
</body>

</html>